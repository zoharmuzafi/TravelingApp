<%= render "users/nav" %>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 text-center title">
			<h1>TravelBoard</h1>
		</div>
	</div>
	<% @posts.each do |post| %>
		<div class="row ">
			<div class="col-md-6 col-md-offset-3 singlePost">
				<% user = User.find(post.user_id) %>
				<h5><%= user.name %> is traveling to <%= post.destination %></h5>
				<p><%= post.description %></p>
			</div>
		</div>
	<% end %>
</div>
